mixin contact(name, post, phone, fb, email, linkedin)
	div
		img.photo(id="thumb-" + name.replace(" ","") src="/static/images/team/#{name}.jpg")
	li(onmouseover="show(this)" onmouseout="release(this)" data-filename=name)
		span.post= post
		span.name= name
		span.phone= phone
		span.others
			a.icon-envelope(href="mailto:#{email}@hyderabad.bits-pilani.ac.in" title="#{email}@hyderabad.bits-pilani.ac.in")
			a.icon-facebook(href="https://facebook.com/#{fb}" title=fb)
			a.icon-linkedin-square(href="https://linkedin.com/in/#{linkedin}")
link(rel="stylesheet" href="/static/stylesheets/contact.style.css")

div.section.body
	ul.contacts
		div
			img.photo.default(src="/static/images/team/clouds.png")
