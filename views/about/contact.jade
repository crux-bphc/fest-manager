script.
	function show(contact) {
		$(contact).removeClass('fade').addClass('active').siblings("li").addClass('fade');
		$("#thumb-" + $(contact).data('filename').replace(" ", "")).addClass('active').siblings("img").removeClass("active");
	}
	function release(contact) {
		$(contact).removeClass('active').siblings().removeClass('fade');
		$('.section.body .contacts img').removeClass('active');
	}
