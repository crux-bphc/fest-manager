mixin contact(name, post, phone)
	div
		img.photo(id="thumb-" + name.replace(" ","") src="/static/images/team/#{name}.jpg")
	li(onmouseover="show(this)" onmouseout="release(this)" data-filename=name)
		span.post= post
		span.name= name
		span.phone= phone
link(rel="stylesheet" href="/static/stylesheets/contact.style.css")

div.section.body
	ul.contacts
		div
			img.photo.default(src="/static/images/team/clouds.png")
		+contact("Abhinav Eittireddy", "President", "9542929354")
		+contact("Sharath Golluri", "Technical Secretary", "9100879085")
		+contact("Aditya Iyer", "General Secretary", "9705932532")
		+contact("Nitish Amireddy", "Sponsorship & Marketing", "7893007437")
		+contact("Sugam Gandhi", "Publicity & Public Relations", "9133234318")
		+contact("Venkata Subbaiah", "Logistics", "9676401052")
		+contact("Rishabh Agrawal", "Security & Hospitality", "9133234434")
		+contact("Ishaan Dewangan", "Photography", "9010716338")
		+contact("Sarthak Jain", "Lights & Sounds", "9133312961")
		+contact("Vishwaa Narayan", "Professional Events", "9704531332")
		+contact("Sahil Sangwan", "Talks & Guest Lectures", "9177067275")
		+contact("Thrinadh Kumpatla", "Visual Effects", "9100589626")
script.
	function show(contact) {
		$(contact).removeClass('fade').addClass('active').siblings("li").addClass('fade');
		$("#thumb-" + $(contact).data('filename').replace(" ", "")).addClass('active').siblings("img").removeClass("active");
	}
	function release(contact) {
		$(contact).removeClass('active').siblings().removeClass('fade');
		$('.section.body .contacts img').removeClass('active');
	}
