script.
    var ANIMATING = false;
    var onMousewheel = function(e) {
        if(ANIMATING) return false;
        ANIMATING = true;
        var delta = e.wheelDelta || e.delta;
        if(delta < 0) {
            Buildings.next();
        }
        else if(delta > 0) {
            Buildings.prev();
        }
    };
    document.body.onmousewheel = onMousewheel;
    document.body.ondommousescroll = onMousewheel;
    window.addEventListener('DOMMouseScroll', onMousewheel, true);
    $.fn.nextOrFirst = function(selector){
        var next = this.next(selector);
        return (next.length) ? next : this.prevAll(selector).last();
    }
    $('.flashlist').each(function(index, item){
        setInterval(function() {
            var current = $(item).find('.active');
            current.removeClass('active').addClass('leaving').nextOrFirst().addClass('active');
            setTimeout(function() {
                current.removeClass('leaving');
            },1000);
        }, 3000);
    });
    window.addEventListener('mousemove', function(e) {
        $('#cursor').css({left: e.pageX, top: e.pageY});
    }, true);
    window.addEventListener('mousedown', function(e) {
        $('#cursor').addClass('down');
    }, true);
    window.addEventListener('mouseup', function(e) {
        $('#cursor').removeClass('down');
    }, true);