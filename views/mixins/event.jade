mixin eventMixin(event, showImage)
	div.event-container(class="#{event.category} #{event.type}" _route="/events/#{event.route}")
		div.face
			span.tag= (event.type.toLowerCase() == "headliner" ? "Competition" : event.type)
			h3.name= event.name
			span.tagline= event.tagline
		if showImage
			div.image(style="background-image:url('#{event.thumbnail}')")
		div.details
