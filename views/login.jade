if error
	script.
		swal({
			title: "#{error.title}",
			text: "#{error.message}",
			type: "error",
			confirmButtonText: "OK",
			confirmButtonColor: "#202729"
		});
h1= title
link(href="/static/stylesheets/login.style.css" rel="stylesheet")
div.auth-container.parent-center
	if methods.google
			div.auth-method.child-center
				a(href="/auth/google")
					button.loginBtn.loginBtn--google(type="button")
						span
							i(aria-hidden"true").fa.fa-google
							| Login with Google

	if methods.facebook
		div.auth-method.child-center
			a(href="/auth/facebook")
					button.loginBtn.loginBtn--facebook(type="button")
						span
							i(aria-hidden"true").fa.fa-facebook-official
							| Login with Facebook
	if methods.github
		div.auth-method.child-center
			a(href="/auth/github")
					button.loginBtn.loginBtn--github(type="button")
						span
							i(aria-hidden"true").fa.fa-github
							| Login with GitHub
