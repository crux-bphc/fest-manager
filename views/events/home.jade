include ../mixins/event
include ../mixins/field
link(rel="stylesheet" href="/static/stylesheets/events.style.css")

div.section.header
	h1.title= title
	div.stretch
		div.remnant
			ul.controls
				li.icon-shopping_cart
				li.icon-close
		- var search = {name: 'search', icon: 'search', placeholder: 'Search', editable: true};
		+fieldMixin(search)
div.section.tags
	a.active(href="#") All
	a(href="#Programming") Programming
	a(href="#FandM") Finance and Management
	a(href="#Quiz") Quizzing
	a(href="#MiniGP") MiniGP
	a(href="#Programming") Programming
	a(href="#FandM") Finance and Management
	a(href="#Quiz") Quizzing
	a(href="#MiniGP") MiniGP
	a(href="#Random") Random
div.section.events-wrapper
	each event in events
		if event.category == "headliner"
			+eventMixin(event)
	each event in events
		if event.category != "headliner"
			+eventMixin(event)
script(src="/static/scripts/events.js" type="text/javascript")