div.section.events-wrapper
	each event in events
		- if(event.route.toLowerCase() == "techexpo" || event.route.toLowerCase() == "@pybits")
			+eventMixin(event, true)
	each event in events
		- if(event.category.toLowerCase() != "techexpo" && event.route.toLowerCase() != "@pybits" && event.type.toLowerCase() == "headliner")
			+eventMixin(event, true)
	each event in events
		- if(event.category.toLowerCase() != "techexpo" && event.route.toLowerCase() != "@pybits" && event.type.toLowerCase() != "headliner")
			+eventMixin(event, true)
