doctype html
html
	head
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(name='Title', content='#{strings.name}, #{strings.tagline}')
		meta(name='Keywords', content='#{strings.keywords}')
		meta(name='Description', content='#{strings.description}')
		meta(name='Language', content='English')
		meta(name='Robots', content='INDEX,FOLLOW')
		link(href="/static/manifest.json" rel="manifest")
		link(href="/static/images/64x64.png" rel="icon")
		link(href="/static/stylesheets/sweetalert.css" rel="stylesheet")
		link(href="/static/stylesheets/github-markdown.css" rel="stylesheet")
		link(href="/static/lib/simplebar.css" rel="stylesheet")
		link(href="/static/stylesheets/bootstrap.min.css" rel="stylesheet")
		link(href="/static/stylesheets/index.style.css" rel="stylesheet")
		link(href='/static/stylesheets/home.style.css', rel='stylesheet')
		link(href='https://fonts.googleapis.com/css?family=Rock+Salt|Herr+Von+Muellerhoff|Montserrat:300,400,600,900', rel='stylesheet')
		title Pearl
		meta(name="robots" content="index, follow")
		meta(name="apple-mobile-web-app-capable" content="yes")
		meta(property="og:type" content="website")
		meta(property="og:site_name" content="#{strings.name}, #{strings.tagline}")
		meta(property="og:title" content="#{strings.name}, #{strings.organiser}")
		meta(property="og:url" content="#{strings.url}")
		meta(property="og:image" content="#{strings.image}")
		meta(name="twitter:title" content="#{strings.name}, #{strings.organiser}")
		meta(name="twitter:image" content="#{strings.image}")
		meta(name="twitter:card" content="#{strings.name}, #{strings.organiser}")
		meta(name="twitter:site" content="#{strings.twitter}")
body
	div.window.fullsize.loading(route= route _triggers="isImmersive=immersive")
		div.navbar(_triggers="navbar/visible=visible")
			div.wrapper
				div#menu.button(tabindex=1)
					i.icon-menu(_triggers="sidebar/hideburger=hidden")
				a.logo(href="/")
					span #{strings.name} ,
					span #{strings.duration}
				span.subtitle.hidden
					i.icon-navigate_next
					span.text
				div.controls
					input.hidden(type="checkbox" id="dropdown")
					div#blurCarpet
					div.button.mute-button(onclick="Buildings.mute()")
						i.mute.icon-volume_up(style="font-size:1.5em")
					div.button.user(_triggers="navbar/avatar=visible" tabindex="0")
						if user
							label(for="dropdown")
								span.ticker
								img(src=user.profileImage)
							div.dropdown
								div.header
									div.details(_route="/dashboard")
										- if (typeof user.name !== "undefined") {
										span.username.
											#{user.name}
										- }
										- if (typeof user.email !== "undefined") {
										span.useremail.
											#{user.email}
										- }
										- else if (typeof user.phone !== "undefined") {
										span.useremail.
											#{user.phone}
										- }
									a.button.cart(href="/dashboard/cart" style="display:none;")
										i.icon-shopping_cart
									a.button.account(href="/dashboard/account" style="display:inline-block;")
										i.icon-mode_edit
								div.subheader
									span Notifications
								div.drawer
									div.scrollable
					a.button(href="/logout" _triggers="navbar/logout=visible")
						i.icon-power_settings_new
						div Logout
					a.button(href="/login" _triggers="navbar/login=visible")
						i.icon-account_circle
						div Login
		div.remnant
			div.sidebar(tabindex="2" _triggers="sidebar/visible=visible")
				div.wrapper
					div.section.primary
						ul
							each val, key in navigation
								a(class=val.initial href=val.route _triggers=val.triggers)
									span= val.label
					div.secondary-wrapper
						div.section.secondary
							a.label
							ul.catch-filters
			div.remnant.main(tabindex="1")
				div.wrapper.face
				div.wrapper.tray
		script(type="application/ld+json" src="/static/scripts/schema.json")
		script(type="text/javascript" src="/static/lib/jquery.min.js")
		script(type="text/javascript" src="/static/lib/deep-diff-0.3.8.min.js")
		script(src="/static/lib/sweetalert.min.js" type="text/javascript")
		script(src="/static/lib/simplebar.js" type="text/javascript")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.19.1/moment.min.js" type="text/javascript")
		script(type="text/javascript" src="/static/scripts/index.js")
